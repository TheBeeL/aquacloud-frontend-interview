{
  "name": "@aquacloud/ui",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "ISC",
  "scripts": {
    "lint": "eslint *.ts*",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@aquacloud/tailwind-config": "workspace:*",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "eslint": "8.33.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "class-variance-authority": "^0.3.0",
    "concurrently": "^7.6.0",
    "tsup": "^6.5.0"
  }
}
